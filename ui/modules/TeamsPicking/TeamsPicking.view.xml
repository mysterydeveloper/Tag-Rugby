<mvc:View controllerName="tag.rugby.ui.modules.TeamsPicking.TeamsPicking" xmlns="sap.m" xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
  <SplitApp id="SplitAppDemo" initialDetail="detail" mode="{/mode}" initialMaster="master">
    <detailPages>
      <Page id="detail" title="Event" backgroundDesign="Solid" showNavButton="true" navButtonPress=".onPressMasterBack">
        <content>
          <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange354wideDual">
              <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
                  adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2"
                  columnsL="1" columnsM="1" singleContainerFullSize="false" />
              </f:layout>
              <f:formContainers>
                <f:FormContainer title="Details">
                  <f:formElements>
                    <f:FormElement label="Event Date">
                      <f:fields>
                        <Input value="{event>/Date}" id="date" enabled="{/editMode}" />
                      </f:fields>
                    </f:FormElement>
                    <f:FormElement label="Event Status">
                      <f:fields>
                        <Input value="{event>/State}" id="status" enabled="{/editMode}" />
                      </f:fields>
                    </f:FormElement>
                  </f:formElements>
                </f:FormContainer>
              </f:formContainers>
            </f:Form>
            <f:Form id="FormChange354wideDuals" editable="false">
              <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
                  adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2"
                  columnsL="2" columnsM="1" singleContainerFullSize="false" />
              </f:layout>
              <f:formContainers>
                <f:FormContainer>
                  <f:formElements>
                    <f:FormElement label="Team 1">
                      <f:fields>
                        <VBox fitContainer="true">
                          <Table id="team1" items="{path: 'team1>/'}" class="sapFDynamicPageAlignContent" width="auto">
                            <columns>
                              <Column width="12em">
                                <Text text="#" />
                              </Column>
                              <Column hAlign="End">
                                <Text text="Name" />
                              </Column>
                            </columns>
                            <items>
                              <ColumnListItem type="Active">
                                <cells>
                                  <ObjectIdentifier title="{team1>number}" />
                                  <ObjectIdentifier title="{team1>name}" />
                                </cells>
                              </ColumnListItem>
                            </items>
                          </Table>
                        </VBox>
                      </f:fields>
                    </f:FormElement>
                  </f:formElements>
                </f:FormContainer>

                <f:FormContainer>
                  <f:formElements>
                    <f:FormElement label="Team 2">
                      <f:fields>
                        <VBox fitContainer="true">
                          <Table id="team2" items="{path: 'team2>/'}" class="sapFDynamicPageAlignContent" width="auto">
                            <columns>
                              <Column width="12em">
                                <Text text="#" />
                              </Column>
                              <Column hAlign="End">
                                <Text text="Name" />
                              </Column>
                            </columns>
                            <items>
                              <ColumnListItem type="Active">
                                <cells>
                                  <ObjectIdentifier title="{team2>number}" />
                                  <ObjectIdentifier title="{team2>name}" />
                                </cells>
                              </ColumnListItem>
                            </items>
                          </Table>
                        </VBox>
                      </f:fields>
                    </f:FormElement>
                  </f:formElements>
                </f:FormContainer>

                <f:FormContainer>
                    <f:formElements>
                      <f:FormElement label="Team 3">
                        <f:fields>
                          <VBox fitContainer="true">
                            <Table id="team3" items="{path: 'team3>/'}" class="sapFDynamicPageAlignContent" width="auto">
                              <columns>
                                <Column width="12em">
                                  <Text text="#" />
                                </Column>
                                <Column hAlign="End">
                                  <Text text="Name" />
                                </Column>
                              </columns>
                              <items>
                                <ColumnListItem type="Active">
                                  <cells>
                                    <ObjectIdentifier title="{team3>number}" />
                                    <ObjectIdentifier title="{team3>name}" />
                                  </cells>
                                </ColumnListItem>
                              </items>
                            </Table>
                          </VBox>
                        </f:fields>
                      </f:FormElement>
                    </f:formElements>
                  </f:FormContainer>
  
                  <f:FormContainer>
                    <f:formElements>
                      <f:FormElement label="Team 4">
                        <f:fields>
                          <VBox fitContainer="true">
                            <Table id="team4" items="{path: 'team4>/'}" class="sapFDynamicPageAlignContent" width="auto">
                              <columns>
                                <Column width="12em">
                                  <Text text="#" />
                                </Column>
                                <Column hAlign="End">
                                  <Text text="Name" />
                                </Column>
                              </columns>
                              <items>
                                <ColumnListItem type="Active">
                                  <cells>
                                    <ObjectIdentifier title="{team4>number}" />
                                    <ObjectIdentifier title="{team4>name}" />
                                  </cells>
                                </ColumnListItem>
                              </items>
                            </Table>
                          </VBox>
                        </f:fields>
                      </f:FormElement>
                    </f:formElements>
                  </f:FormContainer>
  
              </f:formContainers>
            </f:Form>
          </VBox>
        </content>
        <footer>
          <Toolbar>
            <ToolbarSpacer />
            <Button text="Edit" visible="{= !${/editMode}}" press="onEdit" />
            <Button text="Delete" visible="{= !${/editMode}}" press="onDelete" />
            <Button text="Save" visible="{/editMode}" press="onSave" />
            <Button text="Cancel" visible="{/editMode}" press="onCancel" />
          </Toolbar>
        </footer>
      </Page>
    </detailPages>
    <masterPages>
      <Page id="master" title="Events Available for Team Picking" backgroundDesign="List" navButtonPress=".onPressMasterBack">
        <VBox fitContainer="true">
          <Table id="events" items="{
                              path: 'events>/'
                          }" class="sapFDynamicPageAlignContent" width="auto">
            <columns>
              <Column width="12em">
                <Text text="Date" />
              </Column>
              <Column hAlign="End">
                <Text text="State" />
              </Column>
            </columns>
            <items>
              <ColumnListItem type="Navigation" press=".onListItemPress" key="{events>_id}">
                <cells>
                  <ObjectIdentifier title="{events>Date}" />
                  <ObjectIdentifier title="{events>State}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </VBox>
      </Page>
    </masterPages>
  </SplitApp>
</mvc:View>
